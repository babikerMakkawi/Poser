@{
    ViewData["Title"] = "Home Dashboard";
    Layout = "_Dashboard";
}

<button class="btn btn-primary mt-3" id="seed-categories">Seed Categories</button>
<button class="btn btn-primary mt-3" id="seed-brands">Seed Brands</button>
