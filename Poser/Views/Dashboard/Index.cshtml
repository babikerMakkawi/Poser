<button class="btn btn-primary mt-3" id="seed-customers">Seed customers</button>

<script>
    //Seed Data Button
    document.getElementById("seed-categories").addEventListener("click", function () {
        fetch('/Seeder/SeedCategories/')
            .then(function (response) {
                return response.text();
            })
            .then(function (html) {
                window.alert("Data Seeded Successfully");
            })
            .catch(function (error) {
                window.alert("Something Went Wrong!")
            });
    });

