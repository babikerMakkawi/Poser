@{
}
<div class="card bg-white shadow-md h-100">
    <div class="card-body d-flex flex-column">
        
        @* Items Table *@
        <div style="max-height:620px;" class="overflow-auto flex-grow-1">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for(var x=0;x<5;x++)
                    {   
                    <tr>
                        <td>Product 1</td>
                            <td class="w-25">
                            <div class="input-group">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input class="form-control" name="qty" value="0" style="width: 10px !important;" />
                                <button class="btn btn-sm btn-success">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <span>5.00</span>
                        </td>
                        <td>
                            <button class="btn btn-sm">
                                <i class="fas fa-trash text-danger"></i>
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>


        @* Invoice Table *@
        <table class="table">
            <tbody class="text-start">
                <tr>
                    <th>Total Items</th>
                    <td><span>0</span> Item</td>
                </tr>
                <tr>
                    <th>Subtotal</th>
                    <td><span>0</span> SAR</td>
                </tr>
                <tr>
                    <th>
                        DISCOUNT
                    </th>
                    <td><span>0%</span></td>
                </tr>
                <tr>
                    <th>Tax</th>
                    <td><span>0%</span></td>
                </tr>

                <tr class="text-primary">
                    <th>TOTAL</th>
                    <td><span>0</span> SAR</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex flex-column justify-content-center align-items-center mt-3">
            <a href="#" class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#payment-popup">
                <i class="fas fa-money-bill-wave me-2"></i> Pay With Cash
            </a>
            <a href="#" class="btn btn-outline-warning">
                <i class="fas fa-credit-card me-2"></i> Pay With Card
            </a>
        </div>
    </div>


</div>