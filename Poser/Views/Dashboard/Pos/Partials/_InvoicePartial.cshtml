<div class="card bg-white shadow-md h-100">
    <div class="card-body d-flex flex-column">
        
        @* Items Table *@
        <div style="max-height:620px;" class="overflow-auto flex-grow-1">
            <table class="table table-striped" id="products-datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for(var x=0;x<0;x++)
                    {   
                    <tr>
                        <td>Product 1</td>
                            <td class="w-25">
                            <div class="input-group">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input class="form-control" name="qty" value="0" style="width: 10px !important;" />
                                <button class="btn btn-sm btn-success">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td>
                            <span>5.00</span>
                        </td>
                        <td>
                            <button class="btn btn-sm">
                                <i class="fas fa-trash text-danger"></i>
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>


        @* Invoice Table *@
        <table class="table">
            <tbody class="text-start">
                <tr>
                    <th>Total Items</th>
                    <td><span id="total-items">0</span> Item</td>
                </tr>
                <tr>
                    <th>Subtotal</th>
                    <td><span>0</span> SAR</td>
                </tr>
                <tr>
                    <th>
                        DISCOUNT
                    </th>
                    <td><span>0%</span></td>
                </tr>
                <tr>
                    <th>Tax</th>
                    <td><span>0%</span></td>
                </tr>

                <tr class="text-primary">
                    <th>TOTAL</th>
                    <td><span id="total-invoice">0</span> SAR</td>
                </tr>
            </tbody>
        </table>
        <div class="d-flex flex-column justify-content-center align-items-center mt-3">
            <a class="btn btn-primary mb-2" onclick="MakePayment()">
                <i class="fas fa-money-bill-wave me-2"></i> Pay With Cash
            </a>
            <a class="btn btn-outline-warning mb-2" onclick="MakePayment()">
                <i class="fas fa-credit-card me-2"></i> Pay With Card
            </a>
            <a class="btn btn-danger mb-2"
               onclick="$('#products-datatable').DataTable().clear().draw(); calculateTotal();">
                <i class="fas fa-trash me-2"></i> Clear
            </a>
        </div>
    </div>


</div>